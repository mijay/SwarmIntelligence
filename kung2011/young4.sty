%% Upade 23.04.2010

\usepackage[space,noadjust]{cite}   

\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{amsthm}
\usepackage[active]{srcltx}
\usepackage[koi8-r,cp866,cp1251]{inputenc}
\usepackage[english, russian]{babel}
\usepackage[final]{graphicx}

\typeout{Style for Young Scientists Conference Papers.}
\typeout{Institute of  Mathematics and Mechanics, RAS,the Urals Branch}
\typeout{Version 3.01}

\pagestyle{empty}

% Page size settings
%
\voffset          -2.0cm
\textwidth          11cm
\textheight         16cm
\topmargin           0mm
\oddsidemargin       5mm
\emergencystretch=3pt


\def\baselinestretch{1.0}
\DeclareGraphicsRule{.wmf}{bmp}{}{}% declare WMF filename extension
\DeclareGraphicsRule{.bmp}{bmp}{}{}% declare BMP filename extension
\graphicspath{{.}}
\raggedbottom
\tolerance 1000

\def\thesubsubsection{\arabic{subsubsection}.}
\def\theparagraph{\arabic{subsubsection}.\arabic{paragraph}.}

%
%  Environments like a numbered theorem
%
\theoremstyle{plain}
\newtheorem{thm}{Теорема}
\newtheorem{lem}{Лемма}
\newtheorem{cor}{Следствие}
\newtheorem{prop}{Предложение}
\newtheorem{stm}{Утверждение}
\newtheorem{hyp}{Гипотеза}
%
%  Environments like an unnumbered theorem
%
\newtheorem*{thm*}{Теорема}
\newtheorem*{lem*}{Лемма}
\newtheorem*{cor*}{Следствие}
\newtheorem*{prop*}{Предложение}
\newtheorem*{stm*}{Утверждение}
\newtheorem*{hyp*}{Гипотеза}
%
%  Environments like a numbered definition
%
\theoremstyle{definition}
\newtheorem{defi}{Определение}
\newtheorem{ex}{Пример}
\newtheorem{rem}{Замечание}
%
%  Environments like an unnumbered definition
%
\newtheorem*{defi*}{Определение}
\newtheorem*{ex*}{Пример}
\newtheorem*{rem*}{Замечание}

%
% The Title
% Args: 1  - a title
%       2  - author's name (last name + initials)
%      [3] - paper's attributes for the Table of contents
%
%
\def\atitle#1#2%
{\begin{center} {\bf\uppercase{#1}}\\[0.5\baselineskip] {#2}\end{center}
 \vspace{\baselineskip}\@ifnextchar[{\@atitop{#1}{#2}}{\@atit{#1}{#2}}}
\def\@atit#1#2{}
\def\@atitop#1#2[#3]{}
%
%   Redefinition of the Bibliography Environment
%
\def\thebibliography#1{\renewcommand{\refname}{Литература}%
 \subsubsection*{\refname\@mkboth
 {\uppercase{\refname}}{\uppercase{\refname}}}\list
 {[\arabic{enumi}]}{\settowidth\labelwidth{[#1]}\leftmargin\labelwidth
 \advance\leftmargin\labelsep
 \usecounter{enumi}}
 \def\newblock{\hskip .11em plus .33em minus .07em}
 \sloppy\clubpenalty4000\widowpenalty4000
 \sfcode`\.=1000\relax}
 \let\endthebibliography=\endlist
